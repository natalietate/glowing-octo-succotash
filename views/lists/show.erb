<h1>lists#show</h1>
<a href="/todo">Back </a>

<h2><%= @list.title %></h2>

<h3>Your Items</h3>
<ul>
  <% @list.items.each do |item| %>
  <li>
      <%= item.task %>
  </li>
  <% end %>
</ul>

<form action="/item" method="post">
<label for="task">Task Name:</label>
<input type="text" name="task">

<br>

<input type="submit" value="Add Task">
</form>
